@using Microsoft.AspNetCore.Http.Extensions

<iframe
    class="@Class"
    style="@Style"
    frameborder="0"
    type="text/html"
    src="@GetDailymotionEmbedUrl()"
    allow="autoplay; fullscreen; picture-in-picture;"
    >
</iframe>

@code
{
    [Parameter]
    public string Class { get; set; } = string.Empty;

    [Parameter]
    public string Style { get; set; } = string.Empty;

    /// <summary>
    /// Dailymotion player ID.
    /// </summary>
    [Parameter]
    public string PlayerId { get; set; } = string.Empty;

    /// <summary>
    /// Dailymotion video ID.
    /// </summary>
    [Parameter]
    public string VideoId { get; set; } = string.Empty;

    [Parameter]
    public bool Mute { get; set; } = true;

    [Parameter]
    public bool Loop { get; set; } = true;


    /// <summary>
    /// Get URL to Dailymotion embed video.
    /// </summary>
    public string GetDailymotionEmbedUrl()
    {
        return ($"https://geo.dailymotion.com/player/{PlayerId}.html" + GetDailymotionEmbedQueryString());
    }

    /// <summary>
    /// Build the query string based on our parameters.
    /// </summary>
    protected string GetDailymotionEmbedQueryString()
    {
        QueryBuilder parameters = new();

        parameters.Add("video", VideoId);

        if (Mute)
        {
            parameters.Add("mute", "true");
        }
        else
        {
            parameters.Add("mute", "false");
        }

        if (Loop)
        {
            parameters.Add("loop", "true");
        }
        else
        {
            parameters.Add("loop", "false");
        }

        return parameters.ToString();
    }
}
