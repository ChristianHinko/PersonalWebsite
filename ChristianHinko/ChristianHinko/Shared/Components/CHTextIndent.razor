@GetMarkupString()

@code
{
    /// <summary>
    /// A single indent string.
    /// </summary>
    [Parameter]
    public string IndentString { get; set; } = "&nbsp;&nbsp;&nbsp;&nbsp;";

    [Parameter]
    public int IndentationLevel { get; set; } = 0;

    protected MarkupString GetMarkupString()
    {
        string indentationString = string.Empty;

        for (int i = 0; i < IndentationLevel; ++i)
        {
            indentationString += IndentString;
        }

        return new MarkupString(indentationString);
    }
}
