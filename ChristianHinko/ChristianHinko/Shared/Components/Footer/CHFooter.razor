            <CHHyperlinkIconButton Name="Pinterest" Icon="@Icons.Custom.Brands.Pinterest" Href="https://www.pinterest.com/ChristianHinko/" />
            <CHHyperlinkIconButton Name="Tumblr" Icon="@MBELIcons.Brands.Tumblr" Href="https://www.tumblr.com/blog/christianhinko" />
        </MudItem>
    </MudGrid>
    <!-- Copyright notice -->
    <MudText Typo="@Typo.body1" Align="@Align.Center">
        Copyright © 2023 Christian Hinkle.
    </MudText>
</div>

