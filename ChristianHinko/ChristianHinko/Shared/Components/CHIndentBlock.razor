@using System.Text

<div class="flex-shrink-0 flex-grow-0" style="width: @GetStyleWidthValue();"></div>

@code
{
    [Parameter]
    public int IndentationLevel { get; set; } = 0;

    [Parameter]
    public int IndentValue { get; set; } = 1;

    [Parameter]
    public string IndentUnits { get; set; } = "em";

    protected string GetStyleWidthValue()
    {
        StringBuilder stringBuilder = new();

        stringBuilder.Append(IndentationLevel * IndentValue);
        stringBuilder.Append(IndentUnits);

        return stringBuilder.ToString();
    }
}
