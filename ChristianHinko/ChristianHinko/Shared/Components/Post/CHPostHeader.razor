@using ChristianHinko.Types

<div class="my-8">
    <header>
        <MudText Class="ch-header-text" Typo="@Typo.h1">
            @PostInfo.Title
        </MudText>
        <MudText Class="ch-subheader-text" Typo="@Typo.subtitle1">
            @PostInfo.Subtitle
        </MudText>
    </header>
    <div class="my-2"></div>
    <div class="d-flex flex-row justify-center">
        <MudImage Class="rounded" Style="width: 50%; aspect-ratio: 16 / 9;" Src="@PostInfo.ImageSrc" ObjectFit="@ObjectFit.Cover" />
    </div>
</div>
<MudText Typo="@Typo.h5" Align="@Align.End">
    @PostInfo.Date.ToString("MMMM d, yyyy")
</MudText>
<MudDivider Class="my-2" Vertical="false" />

@code
{
    [Parameter]
    public CHPostInfo PostInfo { get; set; }
}
