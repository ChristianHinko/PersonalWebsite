@inherits LayoutComponentBase
@using CHWebApplication.Shared.Components

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <CHAppBar HrefTextButtonList="@HrefTextButtonList" />
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
    <MudScrollToTop>
        <MudFab Icon="@Icons.Material.Filled.ArrowUpward" />
    </MudScrollToTop>
</MudLayout>

@code
{
    private List<CHAppBar.HrefText> HrefTextButtonList { get; set; } = new()
    {
        new() { Href = "/art", Text = "Art" },
        new() { Href = "/games", Text = "Games" }
    };
}
