@page "/games/resume"
@layout Shared.Layouts.MainLayout
@using MudBlazorExtensionLibrary.Services
@inject MBELLayoutService LayoutService
@using CHWebApplication.Shared.Components.Resume

<PageTitle>Christian Hinkle - Resume</PageTitle>

<MudContainer MaxWidth="@MaxWidth.Medium">
    <!-- Resume header -->
    <div class="my-4">
        <MudText Class="ch-resume-text-header" Typo="@Typo.h1" Align="@Align.Center">
            Christian Hinkle
        </MudText>
        <div class="my-1"></div>
        <!-- Contact information -->
        <div class="mud-width-full d-flex flex-row justify-space-around">
            <div class="d-flex flex-row justify-center">
                <MudIcon Icon="@MBELIcons.Material.EarthAmericas" Color="@Color.Primary" Size="@Size.Small" />
                <div class="mx-1"></div>
                <MudLink Href="https://christianhinkle.com/" Target="_blank" Underline="@Underline.Always">
                    <MudText Typo="@Typo.body1">
                        https://christianhinkle.com/
                    </MudText>
                </MudLink>
            </div>
            <div class="d-flex flex-row justify-center">
                <MudIcon Icon="@Icons.Material.Filled.Email" Color="@Color.Primary" />
                <div class="mx-1"></div>
                <MudLink Href="mailto://christianhinko@gmail.com/" Target="_blank" Underline="@Underline.Always">
                    <MudText Typo="@Typo.body1">
                        christianhinko@gmail.com
                    </MudText>
                </MudLink>
            </div>
            <div class="d-flex flex-row justify-center">
                <MudIcon Icon="@Icons.Custom.Brands.LinkedIn" Color="@Color.Primary" />
                <div class="mx-1"></div>
                <MudLink Href="https://www.linkedin.com/in/christianhinko/" Target="_blank" Underline="@Underline.Always">
                    <MudText Typo="@Typo.body1">
                        christianhinko
                    </MudText>
                </MudLink>
            </div>
            <div class="d-flex flex-row justify-center">
                <MudIcon Icon="@Icons.Custom.Brands.GitHub" Color="@Color.Primary" />
                <div class="mx-1"></div>
                <MudLink Href="https://github.com/ChristianHinko" Target="_blank" Underline="@Underline.Always">
                    <MudText Typo="@Typo.body1">
                        ChristianHinko
                    </MudText>
                </MudLink>
            </div>
        </div>
    </div>
    <!-- Resume content -->
    <MudDivider Vertical="false" />
    <MudText Typo="@Typo.body1" Align="@Align.Center">
        Multiplayer game systems programmer with a love for powering video games through modular designs.
    </MudText>
    <MudText Typo="@Typo.body1" Align="@Align.Center">
        Passionately developing with Unreal Engine for 4+ years as an indie.
    </MudText>
    <MudText Class="ch-resume-text-section" Typo="@Typo.h2">
        Education
    </MudText>
    <MudDivider Vertical="false" />
    <CHResumeItem>
        <Title>
            <MudText Class="ch-resume-item-text" Typo="@Typo.body1">
                Bachelor of Science in Computer Science
            </MudText>
        </Title>
        <Date>
            <MudText Class="ch-resume-item-text" Typo="@Typo.body1">
                Graduating May, 2023
            </MudText>
        </Date>
    </CHResumeItem>
    <MudText Typo="@Typo.body1">
        &emsp;Charleston Southern University - 3.4 GPA <span style="font-style: italic;">cum laude</span>
    </MudText>
    <MudText Class="ch-resume-text-section" Typo="@Typo.h2">
